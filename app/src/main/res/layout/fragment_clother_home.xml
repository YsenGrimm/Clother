<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="net.weirdblackmagic.clotherswe.ClotherHome">


    <ProgressBar
        android:layout_width="162dp"
        android:layout_height="162dp"
        android:id="@+id/ratingsBar"
        android:layout_gravity="center_horizontal|bottom"
        android:max="100"
        android:indeterminate="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ratings Left"
        android:id="@+id/ratingsAmout"
        android:layout_gravity="center" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Clother"
        android:id="@+id/titelArea"
        android:layout_gravity="center_horizontal|top"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="60dp"
        android:textIsSelectable="true" />
</FrameLayout>
